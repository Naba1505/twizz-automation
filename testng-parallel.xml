            <class name="tests.fan.FanTermsAndPoliciesTest"/>
            <class name="tests.fan.FanLanguageTest"/>
            <class name="tests.fan.FanPersonalInfoTest"/>
            <class name="tests.fan.FanMessagingTest"/>
            <class name="tests.fan.FanCleanupCardsTest"/>
            <class name="tests.fan.FanClearSearchTest"/>
            <class name="tests.fan.FanFreeSubscriptionTest"/>
            <class name="tests.fan.FanLogoutTest"/>
        </classes>
