            <class name="tests.creator.CreatorDiscoverTest"/>
            <class name="tests.creator.CreatorMessagingTest"/>
            <class name="tests.creator.CreatorRevenuesTest"/>
            <class name="tests.creator.CreatorProfileTest"/>
            <class name="tests.creator.CreatorFormationTest"/>
            <class name="tests.creator.CreatorSubscriptionPriceTest"/>
            <class name="tests.creator.CreatorPromotionsTest"/>
            <class name="tests.creator.CreatorPresentationVideosTest"/>
            <class name="tests.creator.CreatorPushHistoryTest"/>
            <class name="tests.creator.CreatorUnlockHistoryTest"/>
            <class name="tests.creator.CreatorHelpAndContactTest"/>
            <class name="tests.creator.CreatorLegalPagesTest"/>
            <class name="tests.creator.CreatorLanguageTest"/>
            <class name="tests.creator.CreatorCollectionsHistoryTest"/>
            <class name="tests.creator.CreatorPaymentMethodTest"/>
            <class name="tests.creator.CreatorAutomaticMessageTest"/>
