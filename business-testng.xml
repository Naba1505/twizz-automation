<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Twizz Business Automation Suite" parallel="false" thread-count="1" verbose="1" preserve-order="true">
    <listeners>
        <listener class-name="utils.AnnotationTransformer"/>
    </listeners>

    <!-- Business Common Tests -->
    <test name="Business Common Tests">
        <classes>
            <class name="tests.business.common.BusinessLandingPageTest"/>
        </classes>
    </test>

    <!-- Business Manager Tests -->
    <test name="Business Manager Tests">
        <classes>
            <class name="tests.business.manager.BusinessManagerSignUpTest"/>
            <class name="tests.business.manager.BusinessManagerLoginTest"/>
            <class name="tests.business.manager.BusinessManagerAddCreatorTest"/>
            <class name="tests.business.manager.BusinessManagerAddEmployeeTest"/>
        </classes>
    </test>

    <!-- Business Employee Tests -->
    <test name="Business Employee Tests">
        <classes>
            <class name="tests.business.employee.BusinessEmployeeSignUpTest"/>
            <class name="tests.business.employee.BusinessEmployeeLoginTest"/>
        </classes>
    </test>

    <!-- Business Cleanup Tests -->
    <test name="Business Cleanup Tests">
        <classes>
            <class name="tests.business.manager.BusinessManagerDeleteCreatorTest"/>
            <class name="tests.business.manager.BusinessManagerDeleteEmployeeTest"/>
        </classes>
    </test>
</suite>
